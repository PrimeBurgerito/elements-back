#!/usr/bin/env groovy

pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                sh 'ls -a'
                sh 'chmod +x gradlew'
                sh './gradlew wrapper'
                sh './gradlew clean assemble'
                sh 'mv -v elements-api/build/libs/*.jar /var/tmp/app/elements-api.jar'
                sh 'mv -v game-session/build/libs/*.jar /var/tmp/app/elements-session.jar'
            }
        }
    }
}
