#!/usr/bin/env groovy

pipeline {
    agent any

    stages {
        stage('Start MongoDB') {
            steps {
                dir('docker/database/mongodb') {
                    sh 'docker-compose up -d'
                    sh 'docker-compose -f docker-compose.setup.yml up -d'
                    sh 'docker-compose -f docker-compose.post.yml up -d'
                }
            }
        }

        stage('Start Redis') {
            steps {
                dir('docker/database/redis') {
                    sh 'docker-compose up -d'
                }
            }
        }
    }
}
